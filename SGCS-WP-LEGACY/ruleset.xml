<?xml version="1.0"?>
<ruleset name="SGCS-WP-LEGACY">

	<description>Steven Gliebe's coding standards for legacy WordPress plugins and themes.</description>

	<!--
	 * Per Project: PHPCompatibility rules
	 *
	 * Add the following config to a project's own phpcs.xml file to check that code is compatible
	 * with PHP x.x and earlier. Match version to "Requires PHP" min. version in plugin main file.
	 *
	 * <config name="testVersion" value="5.2-" />
 	-->
	<rule ref="PHPCompatibility">
		<include-pattern>*\.php$</include-pattern>
	</rule>

	<!-- WordPress rules= -->
	<rule ref="WordPress"/>

	<!-- Generic rules -->
	<rule ref="Generic"/>

	<!-- Exclude all PEAR rules -->
	<rule ref="PEAR">
		<exclude name="PEAR"/>
	</rule>

	<!-- Exclude all Squiz rules -->
	<rule ref="Squiz">
		<exclude name="Squiz"/>
	</rule>

</ruleset>
